{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Python: current file",
        "type": "shell",
        "command": "${command:python.interpreterPath}",
        "args": ["${file}"],
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "focus": true,
          "reveal": "always"
        },
        "options": {
          "cwd": "${workspaceFolder}"
        }
      }
    ]
  }